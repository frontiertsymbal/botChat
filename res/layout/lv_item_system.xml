<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        >

    <TextView
            android:id="@+id/systemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/system_message"
            android:layout_gravity="bottom|center"
            android:textSize="@dimen/systemMessageTextSize"
            android:textColor="@color/messageTextColor"
            android:maxWidth="@dimen/systemMessageMaxWidth"
            android:layout_margin="@dimen/messageMargin"
            />

</FrameLayout>