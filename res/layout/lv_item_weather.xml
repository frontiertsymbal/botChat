<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
        >

    <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_message"
            android:orientation="vertical"
            android:layout_margin="@dimen/messageMargin"
            >

    <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            <ImageView
                    android:id="@+id/weatherImage"
                    android:layout_width="@dimen/weatherIconSize"
                    android:layout_height="@dimen/weatherIconSize"
                    android:layout_margin="@dimen/weatherIconMargin"
                    />

            <TextView
                    android:id="@+id/weatherText"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:textSize="@dimen/weatherMessageTextSize"
                    android:maxWidth="@dimen/weatherMessageMaxWidth"
                    android:textColor="@color/weatherTextColor"
                    />

        </LinearLayout>

        <TextView
                android:id="@+id/weatherTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="@dimen/timeTextSize"
                android:textColor="@color/timeColor"
                />

    </LinearLayout>


</FrameLayout>